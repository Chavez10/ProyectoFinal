
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout_Cliente.cshtml";
}

<h2>Reserva de Vuelos</h2>
<hr />
<div class="col-md-12">
    @using (Html.BeginForm("InsertarReserva", "Home", FormMethod.Post, new { @id = "aero" }))
    {
        <div class="col-md-6">
            <div class="form-group">
                <label>Origen</label>
                @Html.DropDownList("Origen", (SelectList)ViewBag.Origen, "<< Seleccione >>", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Destino</label>
                @Html.DropDownList("Destino", (SelectList)ViewBag.Destino, "<< Seleccione >>", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Salida</label>
                <input type="date" name="salida" class="form-control" />
            </div>
            <div class="form-group">
                <label>Retorno</label>
                <input type="date" name="retorno" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Reservar Asiento</label>
                <input type="number" name="asiento" class="form-control" />
            </div>
            <div class="form-group">
                <label>Su Aerolinea</label>
                @Html.DropDownList("Aerolinea", (SelectList)ViewBag.Aerolinea, "<< Seleccione >>", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Tipo de Vuelo</label>
                @Html.DropDownList("tipoVuelo", (SelectList)ViewBag.tipoVuelo, "<< Seleccione >>", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Opcion de Vuelo</label>
                @Html.DropDownList("OpcVuelo", (SelectList)ViewBag.OpcVuelo, "<< Seleccione >>", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Reservar Vuelo" />
        </div>    
        
    }
</div>

